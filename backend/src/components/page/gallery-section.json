{
  "collectionName": "components_page_gallery_sections",
  "info": {
    "displayName": "图库区块",
    "description": "展示图片或视频的画廊区块"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "videos": {
      "allowedTypes": [
        "videos"
      ],
      "type": "media",
      "multiple": true
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "grid",
        "masonry",
        "carousel",
        "slider",
        "fullscreen"
      ],
      "default": "grid"
    },
    "columns": {
      "type": "integer",
      "min": 1,
      "max": 6,
      "default": 3
    },
    "showCaptions": {
      "type": "boolean",
      "default": true
    },
    "enableLightbox": {
      "type": "boolean",
      "default": true
    },
    "enableFiltering": {
      "type": "boolean",
      "default": false
    },
    "backgroundColor": {
      "type": "string"
    },
    "animation": {
      "type": "string"
    }
  }
}