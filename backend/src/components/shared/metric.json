{
  "collectionName": "components_shared_metrics",
  "info": {
    "displayName": "指标",
    "description": "项目或产品的关键指标"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "value": {
      "type": "string",
      "required": true
    },
    "unit": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "trend": {
      "type": "enumeration",
      "enum": [
        "up",
        "down",
        "stable",
        "fluctuating"
      ],
      "default": "up"
    },
    "previousValue": {
      "type": "string"
    },
    "changePercentage": {
      "type": "decimal"
    },
    "icon": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "performance",
        "financial",
        "operational",
        "customer",
        "quality",
        "environmental",
        "other"
      ],
      "default": "performance"
    }
  }
}