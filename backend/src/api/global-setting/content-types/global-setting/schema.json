{
  "kind": "singleType",
  "collectionName": "global_settings",
  "info": {
    "singularName": "global-setting",
    "pluralName": "global-settings",
    "displayName": "全局设置",
    "description": "网站全局配置和设置"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "siteDescription": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "logoMobile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "contactInfo": {
      "type": "component",
      "repeatable": false,
      "component": "global.contact-info",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "socialMedia": {
      "type": "component",
      "repeatable": true,
      "component": "global.social-media",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "navigation": {
      "type": "component",
      "repeatable": true,
      "component": "global.navigation-item",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "footer": {
      "type": "component",
      "repeatable": false,
      "component": "global.footer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "scripts": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "styles": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "defaultLanguage": {
      "type": "string",
      "default": "zh-Hans",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "companyInfo": {
      "type": "component",
      "repeatable": false,
      "component": "global.company-info",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}