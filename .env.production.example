# 生产环境配置示例
# 复制此文件为 .env.production 并填入实际值

# 应用配置
NODE_ENV=production
APP_KEYS=your-app-keys-here
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# 数据库配置
DATABASE_CLIENT=postgres
DATABASE_HOST=your-db-host
DATABASE_PORT=5432
DATABASE_NAME=your-db-name
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=true

# Cloudinary配置
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_KEY=your-cloudinary-key
CLOUDINARY_SECRET=your-cloudinary-secret

# 邮件配置
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourcompany.com

# Redis配置 (可选)
REDIS_URL=redis://your-redis-host:6379

# 前端配置
NEXT_PUBLIC_STRAPI_API_URL=https://api.yourcompany.com
NEXT_PUBLIC_SITE_URL=https://www.yourcompany.com
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-name

# 监控配置
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# 安全配置
CORS_ORIGIN=https://www.yourcompany.com,https://yourcompany.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 缓存配置
CACHE_TTL=3600
CDN_URL=https://cdn.yourcompany.com